<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:background="@color/bg_green">

        <Button
            android:id="@+id/virus_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/arrow_back_main"
            android:text="@string/virus"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:drawablePadding="10dp"
            android:background="@null"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp" />

        <RelativeLayout
            android:layout_below="@id/virus_back"
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/virus_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="90sp"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/virus_tag"
                android:layout_toRightOf="@id/virus_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_marginLeft="10dp"
                android:paddingTop="30dp"
                android:textColor="@color/tag_white" />

            <TextView
                android:id="@+id/virus_des"
                android:layout_below="@id/virus_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/virus_des"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:paddingLeft="10dp" />

            <TextView
                android:id="@+id/virus_show"
                android:layout_below="@id/virus_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/virus_show1"
                android:textSize="14sp"
                android:textColor="@color/show_white"
                android:paddingLeft="10dp"
                android:paddingTop="5dp" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_scan"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/sm"
            android:visibility="invisible" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/item_trojans"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp">

            <TextView
                android:id="@+id/tv_trojans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/trojans"
                android:textSize="16sp"
                android:textColor="@android:color/darker_gray"
                android:layout_centerVertical="true" />

            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/notfound"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/iv1"
                android:layout_marginRight="10dp" />

            <ImageView
                android:id="@+id/iv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_pre"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true" />
        </RelativeLayout>

        <View
            android:id="@+id/view"
            android:layout_below="@id/item_trojans"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/view_gray" />

        <RelativeLayout
            android:id="@+id/item_risk"
            android:layout_below="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp">

            <TextView
                android:id="@+id/tv_risk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/risk"
                android:textSize="16sp"
                android:textColor="@android:color/darker_gray"
                android:layout_centerVertical="true" />

            <TextView
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/notfound"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/iv2"
                android:layout_marginRight="10dp" />

            <ImageView
                android:id="@+id/iv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_pre"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true" />

        </RelativeLayout>

        <Button
            android:id="@+id/virus_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="@string/startscan"
            android:textSize="16sp"
            android:textColor="@color/text_gray"
            android:background="@drawable/bg_cancel_selector"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp" />

    </RelativeLayout>

</LinearLayout>
